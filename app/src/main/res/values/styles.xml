<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="person_name_text">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="profile_page_header_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Profile sayfasındaki relative layout için olan ayar -->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="profile_details_layout" parent="parent">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Profil sayfasındaki her bir küçük resim için olan ayar -->
    <style name="profile_page_small_pics">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Profile page content layoutundaki alt kısımdaki yazılar için
    olan stil ayarlamaları -->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="profileDetailsTextMain" parent="viewParent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="profileDetailsMiniText" parent="viewParent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">14dp</item>
    </style>

    <!-- aradaki view bölmeleri için olan ayar-->
    <style name="profileDetailsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- Yeni evcil hayvan kaydı eklemek için kullanılacak olan buton -->

    <style name="profilePageNewPetStyledButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@drawable/new_pet_record_btn_gradient</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">250dp</item>
    </style>
</resources>