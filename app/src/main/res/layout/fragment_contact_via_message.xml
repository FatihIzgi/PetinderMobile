<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ContactViaMessage.ContactViaMessageFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twJustBorder2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/twJustBorder2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tw_border"
        android:backgroundTint="#89D9FD"
        android:hapticFeedbackEnabled="false"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uuserName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buse YÄ±lmaz"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/twJustBorder2"
        app:layout_constraintLeft_toRightOf="@id/ivProfilePhotoFContact"
        app:layout_constraintTop_toTopOf="@id/twJustBorder2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePhotoFContact"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/user_pp_example1"
        app:circularflow_defaultRadius="500dp"
        app:layout_constraintBottom_toBottomOf="@id/twJustBorder2"
        app:layout_constraintLeft_toLeftOf="@id/twJustBorder2"
        app:layout_constraintTop_toTopOf="@id/twJustBorder2" />
</androidx.constraintlayout.widget.ConstraintLayout>