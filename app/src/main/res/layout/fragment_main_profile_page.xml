<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainPage.MainProfilePageFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnAddNewPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeni Evcil Hayvan Ekle"
                android:backgroundTint="#1ADFF8"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/rvUserPets"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintRight_toRightOf="@id/innerConstraintLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUserPets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toTopOf="@id/twJustBorderForPetsProfile"
                app:layout_constraintLeft_toLeftOf="@id/twJustBorderForPetsProfile"
                app:layout_constraintRight_toRightOf="@id/twJustBorderForPetsProfile"

                app:layout_constraintTop_toBottomOf="@id/twUserPetInfo" />


            <TextView
                android:id="@+id/twJustBorderForPetsProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#1ADFF8"
                app:layout_constraintBottom_toTopOf="@id/btnAddNewPet"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintRight_toRightOf="@id/innerConstraintLayout"

                />

            <TextView
                android:id="@+id/twUserNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Kullanıcı Adı"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/twUserInfo" />

            <TextView
                android:id="@+id/twUserNameInfoReel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Buse Yılmaz"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toBottomOf="@id/twUserNameInfo" />

            <TextView
                android:id="@+id/twTelephoneInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Telefon Numarası"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/twUserNameInfoReel" />

            <TextView
                android:id="@+id/twTelephoneInfoReel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0512 345 6789"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toBottomOf="@id/twTelephoneInfo" />

            <TextView
                android:id="@+id/twEMailInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Mail Adresi"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/twTelephoneInfoReel" />

            <TextView
                android:id="@+id/twEmailInfoReel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="user_mail@gmail.com"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toBottomOf="@id/twEMailInfo" />

            <TextView
                android:id="@+id/twAddressInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:text="Adres"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/twEmailInfoReel" />

            <TextView
                android:id="@+id/twAddressInfoReel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="İzmir/Bornova"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                android:layout_marginLeft="4dp"
                app:layout_constraintTop_toBottomOf="@id/twAddressInfo" />

            <TextView
                android:id="@+id/twUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:text="Hesap Bilgilerim"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toBottomOf="@id/twJustBorderProfile" />

            <TextView
                android:id="@+id/twJustBorderProfile"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:background="#1ADFF8"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                app:layout_constraintRight_toRightOf="@id/innerConstraintLayout"
                app:layout_constraintTop_toTopOf="@id/innerConstraintLayout"
                />

            <TextView
                android:id="@+id/twUserPetInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Evcil Hayvanlarım"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/innerConstraintLayout"
                android:layout_marginLeft="2dp"
                app:layout_constraintTop_toBottomOf="@id/twAddressInfoReel" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/user_pp_example5"
                app:layout_constraintLeft_toLeftOf="@id/twJustBorderProfile"
                app:layout_constraintRight_toRightOf="@id/twJustBorderProfile"
                app:layout_constraintTop_toTopOf="@id/twJustBorderProfile"
                app:layout_constraintBottom_toTopOf="@id/twUserNameProfile"/>


            <TextView
                android:id="@+id/twUserNameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buse Yılmaz"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/twJustBorderProfile"
                app:layout_constraintLeft_toLeftOf="@id/twJustBorderProfile"
                app:layout_constraintRight_toRightOf="@id/twJustBorderProfile" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>