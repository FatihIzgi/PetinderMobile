<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Pet.PetAdaptionFragment">

    <Button
        android:id="@+id/btnGetContactForAdoption"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#89D9FD"
        android:text="İletişime Geç"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:cornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/twDistance5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3km uzakta"
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/petPhoto"
        app:layout_constraintEnd_toEndOf="@+id/petPhoto"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/petPhoto"
        app:layout_constraintTop_toBottomOf="@+id/twJustBorder" />

    <TextView
        android:id="@+id/twJustBorder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tw_border"
        android:backgroundTint="#89D9FD"
        android:hapticFeedbackEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Buse Yıldırım"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivProfilePhotoFMessageCard"
        app:layout_constraintStart_toEndOf="@+id/ivProfilePhotoFMessageCard"
        app:layout_constraintTop_toTopOf="@+id/ivProfilePhotoFMessageCard" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePhotoFMessageCard"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/user_pp_example1"
        app:circularflow_defaultRadius="500dp"
        app:layout_constraintBottom_toBottomOf="@+id/twJustBorder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/twJustBorder" />

    <ImageView
        android:id="@+id/petPhoto"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:src="@drawable/dog_image_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twDistance5" />

    <ImageView
        android:id="@+id/imageNextPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/next_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName" />

    <ImageView
        android:id="@+id/imagePrevious"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/previous_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petName" />

    <TextView
        android:id="@+id/petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Maslow"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/petPhoto"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@+id/petPhoto"
        app:layout_constraintTop_toBottomOf="@+id/petPhoto" />

    <TextView
        android:id="@+id/twNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sonraki"
        app:layout_constraintEnd_toEndOf="@+id/imageNextPhoto"
        app:layout_constraintStart_toStartOf="@+id/imageNextPhoto"
        app:layout_constraintTop_toBottomOf="@+id/imageNextPhoto" />

    <TextView
        android:id="@+id/twPreviousPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Önceki"
        app:layout_constraintEnd_toEndOf="@+id/imagePrevious"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imagePrevious"
        app:layout_constraintTop_toBottomOf="@+id/imagePrevious" />

</androidx.constraintlayout.widget.ConstraintLayout>